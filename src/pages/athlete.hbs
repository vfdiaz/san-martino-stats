<!DOCTYPE html>
<html lang="en">

<head>

  <!-- 
    This is the main Handlebars template for the site 
    - When the user visits the homepage or submits a choice the app calls the endpoints in server.js
    - The server script passes data in here and the Handlebars code builds it into the HTML page
  -->

  <meta charset="utf-8" />
  <link rel="icon" href="https://glitch.com/favicon.ico" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <title>{{seo.title}}</title>

  <!-- Meta tags for SEO and social sharing -->
  <link rel="canonical" href="{{seo.url}}">
  <meta name="description" content="{{seo.description}}">
  <meta property="og:title" content="{{seo.title}}">
  <meta property="og:type" content="article">
  <meta property="og:url" content="{{seo.url}}">
  <meta property="og:description" content="{{seo.description}}">
  <meta property="og:image" content="{{seo.image}}">
  <meta name="twitter:card" content="summary">

  <!-- Import the webpage's stylesheet -->
  <link rel="stylesheet" href="/style.css" />

  <!-- Show choice chart on poll submission -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chartjs-adapter-moment@0.1.1"></script>
  <script type="text/javascript">

      
    function showTimesChart(choices, picks) {
      
      // Get the page element to show the chart inside
      var ctx = document.getElementById('timeChart');
      
 
      // Build the chart in the page element
      var myChart = new Chart(ctx, {

        type: "line",
        data: {       
          labels: choices,
          datasets: [{
             label: "Mejores tiempos",
            data: picks,
          }]
        },
        options: {
            scales: {
              y: {
                suggestedMin: 1800,
                suggestedMax: 3000,
                reverse: true,
                ticks: {
                   stepSize: 300,
                   callback: function(v) { return new Date( v * 1000).toISOString().substr(12,7)}
                } 
             }
            },
          plugins : {
            tooltip: {
              callbacks: {
                label:  function(v) { return new Date( v.raw * 1000).toISOString().substr(12,7)}
              }
            }
          }
        }
      });
      
      
    }
    
    function showRanksChart(choices, picks) {
      
      // Get the page element to show the chart inside
      var ctx = document.getElementById('ranksChart');
      
 
      // Build the chart in the page element
      var myChart = new Chart(ctx, {

        type: "line",
        data: {       
          labels: choices,
          datasets: [{
             label: "Posición por año",
            data: picks,
          }]
        },
        options: {
            scales: {
              y: {
                suggestedMin: 1,
                suggestedMax: 100,
                reverse: true,
                ticks: {
                   stepSize: 10
                } 
             }
            }
        }
      });
      
    }
    
      function showPercentilChart(choices, picks) {
      
      // Get the page element to show the chart inside
      var ctx = document.getElementById('percentilChart');
      
 
      // Build the chart in the page element
      var myChart = new Chart(ctx, {

        type: "line",
        data: {       
          labels: choices,
          datasets: [{
             label: "Percentil por año",
            data: picks,
          }]
        },
        options: {
            scales: {
              y: {
                suggestedMin: 1,
                suggestedMax: 100,
                reverse: true,
                ticks: {
                   stepSize: 10
                } 
             }
            }
        }
      });
      }
    
  </script>

</head>

<body>
  <div class="wrapper">
    <div class="content" role="main">

      <!-- This is the start of content for our page -->
      <h1>San Martiño</h1>
      <p>
        Algunos datos sobre el corredor
      </p>
      {{#if error}}
      <p class="error">
        {{error}}
      </p>
      
      {{else}}
      <!-- Server returns a flag when the user has submitted a choice and we show the results -->
      
       {{#if athleteInfo}}
       <h3>
         {{athleteInfo.athlete_fullname}}
      </h3>
      <h4>
         Mejor marca: {{athleteInfo.time}} ({{athleteInfo.competition_year}})
      </h4>
       {{/if}}
      
      <h2>
      Mejor marca por año
      </h2>
      <div class="poll-results">
        <p>
          <canvas id="timeChart"></canvas>
          <script type="text/javascript">
            showTimesChart("{{{ timeYear }}}".split(","), "{{{ timeMark }}}".split(","));
          </script>
            
        </p>
      </div>
      
      <h2>
      Ranking por año
      </h2>
      <div class="poll-results">
        <p>
          <canvas id="ranksChart"></canvas>
          <script type="text/javascript">
            showRanksChart("{{{ timeYear }}}".split(","), "{{{ timeRank }}}".split(","));
          </script>
            
        </p>
      </div>
      
      <h2>
      Percentil por año
      </h2>
      <div class="poll-results">
        <p>
          <canvas id="percentilChart"></canvas>
          <script type="text/javascript">
            showPercentilChart("{{{ timeYear }}}".split(","), "{{{ timePercentil }}}".split(","));
          </script>
            
        </p>
      </div>
      
      
            <!-- Write out a table row for each entry in the log array showing choice and timestamp -->
      {{#if rankinfo.length}}
          <div>
            <h2>Ranking global mejores tiempos</h2>
            <table>
              <tr>
                <th>Posicion</th>
                <th>Corredor</th>
                <th>Año</th>
                <th>Tiempo</th>
              </tr>
              {{#each rankinfo}}
                <tr>
                  <td>{{position}}</td>
                  <td>{{athlete_fullname}}</td>
                  <td>{{competition_year}}</td>
                  <td>{{time}}</td>
                </tr>
              {{/each}}
            </table>
          </div>
      {{else}}
      <p class="error">
        No records!
      </p>
      {{/if}}

      
      
      
      {{#if results}}
     
      
      <h2>
      Distribución de corredores por tiempo
      </h2>
      <div class="poll-results">
        <p>
          <canvas id="distribChart"></canvas>
          <script type="text/javascript">
            showDistribChart("{{{ distribNames }}}".split(","), "{{{ distribCounts }}}".split(","));
          </script>
            
        </p>
      </div>
      
      <h2>
      Mejor marca por año
      </h2>
      <div class="poll-results">
        <p>
          <canvas id="timeChart"></canvas>
          <script type="text/javascript">
            showTimesChart("{{{ timeYear }}}".split(","), "{{{ timeMark }}}".split(","));
          </script>
            
        </p>
      </div>
      
    
      {{/if}}
      {{/if}}

      
      

    </div>
  </div>
  <!-- The footer holds our remix button — you can use it for structure or cut it out ✂ -->
  <footer class="footer">
   <div class="links"></div>
    <a href="/">Ranking</a>
    <span class="divider">|</span>
    <a href="/competitions">Carreras</a>
    <a class="btn--remix" target="_top" href="https://glitch.com/edit/#!/remix/glitch-hello-sqlite">
      <img src="https://cdn.glitch.com/605e2a51-d45f-4d87-a285-9410ad350515%2FLogo_Color.svg?v=1618199565140"
        alt="" />
      Remix on Glitch
    </a>
  </footer>
</body>

</html>
